<ribbon:RibbonTab x:Class="Notifications.Plugins.SMS.Client.UI.tabSMSTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Header="Messaging">
    <ribbon:RibbonGroup x:Name="MyMessaging" 
                                    Header="SMS">
        <ribbon:RibbonButton x:Name="SendSMS"
                                         Label="Send" Click="SendSMS_Click" />
        <ribbon:RibbonButton x:Name="smsHistory"
                                         Label="History" Click="smsHistory_Click" >
        </ribbon:RibbonButton>
        <ribbon:RibbonButton x:Name="smsTemplate"
                                         Label="SMS Template" Click="smsTemplate_Click">
        </ribbon:RibbonButton>
    </ribbon:RibbonGroup>
</ribbon:RibbonTab>
